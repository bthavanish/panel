<script>
document.addEventListener('DOMContentLoaded', () => {
  const mobileSidebar = document.getElementById('mobile-sidebar');
  const mobileSidebarPanel = document.getElementById('mobile-sidebar-panel');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const closeMobileSidebar = document.getElementById('close-mobile-sidebar');
  const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');

  // Get current page path
  const currentPath = window.location.pathname;

  // Function to update active link
  function updateActiveLink() {
    mobileNavLinks.forEach(link => {
      const href = link.getAttribute('href');
      if (href && currentPath.startsWith(href)) {
        link.classList.add('bg-neutral-200', 'dark:bg-white/10', 'text-neutral-900', 'dark:text-white', 'font-medium');
        link.classList.remove('text-neutral-600', 'dark:text-neutral-400');
      } else {
        link.classList.remove('bg-neutral-200', 'dark:bg-white/10', 'text-neutral-900', 'dark:text-white', 'font-medium');
        link.classList.add('text-neutral-600', 'dark:text-neutral-400');
      }
    });
  }

  // Initialize active link
  updateActiveLink();

  // Open mobile sidebar
  if (sidebarToggle) {
    sidebarToggle.addEventListener('click', () => {
      mobileSidebar.classList.remove('opacity-0', 'pointer-events-none');
      mobileSidebarPanel.classList.remove('-translate-x-full');
    });
  }

  // Close mobile sidebar
  function closeSidebar() {
    mobileSidebar.classList.add('opacity-0', 'pointer-events-none');
    mobileSidebarPanel.classList.add('-translate-x-full');
  }

  if (closeMobileSidebar) {
    closeMobileSidebar.addEventListener('click', closeSidebar);
  }

  // Close on backdrop click
  mobileSidebar.addEventListener('click', (e) => {
    if (e.target === mobileSidebar) {
      closeSidebar();
    }
  });

  // Close on navigation
  mobileNavLinks.forEach(link => {
    link.addEventListener('click', () => {
      setTimeout(closeSidebar, 150);
    });
  });
});
</script>

